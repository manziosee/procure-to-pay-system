# Production Environment Variables (Fly.io + Neon)
SECRET_KEY=django-insecure-fly-production-key-change-me
DEBUG=False

# Neon PostgreSQL Database
DATABASE_URL=postgresql://neondb_owner:YOUR_DB_PASSWORD@YOUR_DB_HOST/neondb?sslmode=require

# Redis (Fly.io Redis addon)
REDIS_URL=redis://localhost:6379

# OpenAI API Key (Get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=<your-openai-api-key>

# Hosts & CORS
ALLOWED_HOSTS=procure-to-pay-backend.fly.dev,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=https://procure-to-pay-system.vercel.app,http://localhost:3000