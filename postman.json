              "host": ["{{baseUrl}}"],
              "path": ["requests", "1", "reject", ""]
            }
          }
        },
        {
          "name": "Submit Receipt",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "receipt",
                  "type": "file",
