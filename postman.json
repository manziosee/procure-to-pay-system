        {
          "name": "Delete Request",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/requests/1/",
              "host": ["{{baseUrl}}"],
              "path": ["requests", "1", ""]
            }
          }
        },
        {
          "name": "Approve Request",
