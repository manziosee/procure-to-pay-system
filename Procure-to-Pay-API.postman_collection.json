{
  "info": {
    "name": "Procure-to-Pay System API",
    "description": "Complete API collection for the Procure-to-Pay system with multi-level approval workflows",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "base_url_local",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "base_url_prod",
      "value": "https://procure-to-pay-system.fly.dev",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login (Local)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"staff1\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url_local}}/api/auth/login/",
              "host": ["{{base_url_local}}"],
              "path": ["api", "auth", "login", ""]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.access);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login (Production)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"staff1\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url_prod}}/api/auth/login/",
              "host": ["{{base_url_prod}}"],
              "path": ["api", "auth", "login", ""]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.access);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url_local}}/api/auth/profile/",
              "host": ["{{base_url_local}}"],
              "path": ["api", "auth", "profile", ""]
            }
          }
        }
