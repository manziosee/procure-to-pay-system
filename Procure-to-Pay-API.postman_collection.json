					"request": {
						"method": "POST",
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": []
								}
							]
						},
						"url": {
							"raw": "{{baseUrl}}/api/proforma/po/1/validate-receipt/",
							"host": ["{{baseUrl}}"],
							"path": ["api", "proforma", "po", "1", "validate-receipt", ""]
						}
					}
				}
			]
		},
		{
			"name": "üìö API Documentation",
			"item": [
